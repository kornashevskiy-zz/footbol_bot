{% extends 'BotBundle:Default:base.html.twig' %}
{% block body %}
    <div class="container">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="row william_hill">
            <h3>William Hill</h3>
            <div class="form-group" id="william">
                {{ form_label(form.link, 'Всавьте id или ссылку матча:', {
                    'label_attr': {'class': 'control-label col-sm-3'}
                }) }}
                <div class="col-sm-9">
                    {{ form_widget(form.link) }}
                    {{ form_errors(form.link) }}
                </div>
            </div>
        </div>
        <div class="row fonbel">
            <h3>Fonbel</h3>
            <div class="form-group col-sm-6 col-xs-12">
                <div class="form-group">
                    {{ form_label(form.link, 'Логин:', {
                        'label_attr': {'class': 'control-label col-sm-2'}
                    }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.login, {'attr': {'class' : 'form-control'}}) }}
                        {{ form_errors(form.login) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.link, 'Пароль:', {
                        'label_attr': {'class': 'control-label col-sm-2'}
                    }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.password, {'attr': {'class' : 'form-control'}}) }}
                        {{ form_errors(form.password) }}
                    </div>
                </div>
            </div>
            <div class="form-group col-sm-6 col-xs-12">
                <div class="form-group">
                    {{ form_label(form.link, 'Сумма ставки:', {
                        'label_attr': {'class': 'control-label col-sm-5'}
                    }) }}
                    <div class="col-sm-7">
                        {{ form_widget(form.count_bet, {'attr': {'class' : 'form-control'}}) }}
                        {{ form_errors(form.password) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.link, 'Номер матча:', {
                        'label_attr': {'class': 'control-label col-sm-5'}
                    }) }}
                    <div class="col-sm-7">
                        {{ form_widget(form.match_number, {'attr': {'class' : 'form-control'}}) }}
                        {{ form_errors(form.match_number) }}
                    </div>
                </div>
            </div>
            <div class="col-xs-12 form-group text-center">
                {{ form_widget(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
        <div class="row log" id="log">
            <h3>Лог</h3>
        </div>
    </div>
    <!-- Modal -->
    {% if modal is defined %}
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Проверка на соответствие</h4>
                    </div>
                    <div class="modal-body">
                        {% if titles is defined %}
                            {% for key, value in titles %}
                                <p>{{ key }} - {{ value }}</p>
                                <input type="hidden" value="{{ data }}" id="hiddenInput"/>
                            {% endfor %}
                        {% else %}
                            {{ error }}
                        {% endif %}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal" id="agreeButton">Продолжить</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                    </div>
                </div>

            </div>
        </div>
    {% endif %}
    <!-- end Modal -->
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    {% if modal is defined %}
        <script>
            $('#myModal').modal('show');
        </script>
        <script src="{{ asset('js/main.js') }}"></script>
    {% endif %}

{% endblock %}
